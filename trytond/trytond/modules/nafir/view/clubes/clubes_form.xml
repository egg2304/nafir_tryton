<?xml version="1.0"?>
<form col="6">
    <label name="nombre"/>
    <field name="nombre"/>
    <notebook colspan="6">
        <page string="Datos" id="tab_datos">
            <label name="domicilio"/>
            <field name="domicilio"/>
            <label name="telefono"/>
            <field name="telefono"/>
            <label name="personeria"/>
            <field name="personeria"/>
            <newline/>
            <label name="ciudad"/>
            <field name="ciudad" widget="selection"/>
            <label name="cancha"/>
            <field name="cancha"/>
            <label name="fecha_fundacion"/>
            <field name="fecha_fundacion"/>
            <newline/>
            <label name="observaciones"/>
            <field name="observaciones" colspan="5"/>
        </page>
        <page string="Lineas" id="tab_lineas">
            <field name="lineas" colspan="6" mode="tree,form" view_ids="nafir.view_clubes_lineas_tree,nafir.view_clubes_lineas_form"/>
        </page>
        <page string="Jugadores" id="tab_jugadores">
            <field name="jugadores" colspan="6" mode="tree,form" view_ids="nafir.view_jugadores_tree,nafir.view_jugadores_form"/>
        </page>
    </notebook>
</form>
